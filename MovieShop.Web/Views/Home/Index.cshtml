@*every view has only one model*@
@model IEnumerable<MovieShop.Core.Models.Response.MovieResponseModel>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid bg-light">
    <div class="row">
        @foreach (var movie in Model)
        {
            //call movie card from here
            //passing data from parent to child partial view
            <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                @await Html.PartialAsync(partialViewName: "_MovieCard", movie)
                @*this can also be used-> <partial name="_MovieCard" model="movie" />*@
            </div>
        }
    </div>
</div>
